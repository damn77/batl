# Environment configuration for BATL backend
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
# Local development: Install PostgreSQL and create a database
# Example: postgresql://user:password@localhost:5432/batl
DATABASE_URL=postgresql://batl:password@localhost:5432/batl

# Session
SESSION_SECRET=change-this-to-a-secure-random-string-minimum-32-characters-long

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3001

# SMTP configuration (for password resets)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@batl.example.com
SMTP_PASS=your-smtp-password

# Admin user for seed script
ADMIN_EMAIL=admin@batl.example.com
ADMIN_PASSWORD=ChangeMe123!
