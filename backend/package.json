{
  "name": "batl-backend",
  "version": "1.0.0",
  "description": "BATL (Bratislavska Tenisova Liga) tennis tournament platform - Backend API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "db:reset": "npm run db:clear-sessions && prisma migrate reset --force",
    "db:clear-sessions": "node -e \"const fs = require('fs'); const path = require('path'); const dir = './sessions'; if (fs.existsSync(dir)) { fs.readdirSync(dir).forEach(f => fs.unlinkSync(path.join(dir, f))); console.log('Sessions cleared'); } else { console.log('No sessions directory'); }\""
  },
  "keywords": [
    "tennis",
    "tournament",
    "batl",
    "user-management"
  ],
  "author": "BATL Team",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@prisma/client": "^6.18.0",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "joi": "^18.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "prisma": "^6.18.0",
    "session-file-store": "^1.5.0",
    "tough-cookie": "^5.1.2",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}